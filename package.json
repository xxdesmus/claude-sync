{
  "name": "@xxdesmus/claude-sync",
  "version": "0.4.5",
  "description": "Sync Claude Code conversations across machines. E2E encrypted, privacy-first.",
  "type": "module",
  "bin": {
    "claude-sync": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build",
    "prepare": "husky"
  },
  "keywords": [
    "claude",
    "claude-code",
    "sync",
    "cli",
    "encryption",
    "privacy",
    "e2e",
    "backup",
    "sessions"
  ],
  "author": "kneetworks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xxdesmus/claude-sync.git"
  },
  "homepage": "https://github.com/xxdesmus/claude-sync#readme",
  "bugs": {
    "url": "https://github.com/xxdesmus/claude-sync/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.965.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^13.0.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
